$('#chart-container').html("<%= escape_javascript(render(partial: 'repos/show_releases_chart', locals: { chart_columns: @chart_columns })) %>");

$("#chart").highcharts({
  chart: {
    type: 'column',
    zoomType: 'x'
  },
  subtitle: {
    text: document.ontouchstart === undefined ? 'Click and drag in the plot area to zoom in' : 'Pinch the chart to zoom in'
  },
  title: {
    text: ""
  },
  exporting: {
    enabled: false
  },
  tooltip: {
    useHTML: true,
    crosshairs: true,
    shared: true
  },
  xAxis: {
    categories: <%= raw @chart_columns[:categories] %>,
    labels: {
      rotation: -30
    }
  },
  yAxis: {
    title: {
      text: "<%= @chart_columns[:unit].capitalize %>",
    },
    type: 'logarithmic'
  },
  legend: {
    layout: 'horizontal',
    align: 'center',
    verticalAlign: 'bottom',
    borderWidth: 0
  },
  series: <%= raw @chart_columns[:columns] %>
});
